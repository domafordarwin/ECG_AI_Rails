<% content_for :title, "ECG EduAnalytics - Data Upload Screen" %>

<style>
/* Dashed upload area */
.upload-area {
    background-image: url("data:image/svg+xml,%3csvg width='100%25' height='100%25' xmlns='http://www.w3.org/2000/svg'%3e%3crect width='100%25' height='100%25' fill='none' rx='8' ry='8' stroke='%23CBD5E1FF' stroke-width='2' stroke-dasharray='8%2c8' stroke-dashoffset='0' stroke-linecap='square'/%3e%3c/svg%3e")
    }
</style>

<div class="min-h-screen flex flex-col text-slate-800 bg-gray-100" data-controller="upload">
  <!-- Header -->
  <header class="bg-[#2563EB] text-white shadow-sm shrink-0">
    <div class="max-w-[1440px] mx-auto px-6 h-16 flex items-center justify-between">
      <div class="flex items-center space-x-3 cursor-pointer" onclick="window.location.href='/'">
        <svg class="h-8 w-auto text-white" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24"><path d="M22 12h-4l-3 9L9 3l-3 9H2"></path></svg>
        <span class="text-xl font-bold tracking-tight">ECG EduAnalytics</span>
      </div>
      <nav class="hidden md:flex items-center h-full space-x-8 text-sm font-medium">
        <a class="h-full flex items-center opacity-80 hover:opacity-100 transition-opacity px-1 border-b-2 border-transparent hover:border-white/50" href="/">Dashboard</a>
        <a class="h-full flex items-center px-1 border-b-2 border-white font-semibold" href="/upload">Upload</a>
        <a class="h-full flex items-center opacity-80 hover:opacity-100 transition-opacity px-1 border-b-2 border-transparent hover:border-white/50" href="/analysis">Analysis</a>
        <a class="h-full flex items-center opacity-80 hover:opacity-100 transition-opacity px-1 border-b-2 border-transparent hover:border-white/50" href="/feedback">Feedback</a>
      </nav>
      <div class="flex items-center space-x-4">
        <div class="flex items-center space-x-2">
          <div class="h-8 w-8 rounded-full bg-blue-400 flex items-center justify-center text-white">
            <svg fill="none" height="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="20" xmlns="http://www.w3.org/2000/svg"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
          </div>
          <span class="text-sm font-medium">Dr. Lee</span>
        </div>
        <button class="bg-white text-[#2563EB] px-4 py-1.5 rounded text-sm font-semibold hover:bg-slate-100 transition-colors shadow-sm">Logout</button>
      </div>
    </div>
  </header>

  <main class="flex-grow p-6 md:p-8 max-w-[1440px] mx-auto w-full">
    <h1 class="text-3xl font-bold text-slate-900 mb-6">Data Upload Screen</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 items-start">
      <!-- Card 1: Student Info -->
      <section class="bg-white rounded-xl shadow-sm p-6 border border-slate-200 h-[600px] flex flex-col">
        <h2 class="text-lg font-bold text-slate-900 mb-5">1. Student Information & Conditions</h2>
        <form class="space-y-6 flex-grow overflow-y-auto pr-2">
          <div>
            <h3 class="text-sm font-bold text-slate-900 mb-3">Student Information</h3>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-xs font-medium text-slate-600 mb-1.5">Nickname</label>
                <input class="w-full border-gray-300 rounded-md text-sm py-2 px-3 focus:ring-blue-500 focus:border-blue-500" placeholder="e.g., BioStudent123" type="text"/>
              </div>
              <div>
                <label class="block text-xs font-medium text-slate-600 mb-1.5">Student ID</label>
                <input class="w-full border-gray-300 rounded-md text-sm py-2 px-3 focus:ring-blue-500 focus:border-blue-500" placeholder="e.g., 2024001" type="text"/>
              </div>
            </div>
          </div>
          <hr class="border-slate-100"/>
          <div>
            <h3 class="text-sm font-bold text-slate-900 mb-3">Measurement Conditions</h3>
            <div class="grid grid-cols-2 gap-4 mb-4">
              <div>
                <label class="block text-xs font-medium text-slate-600 mb-1.5">Measurement Time</label>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-400">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                  </div>
                  <input class="w-full border-gray-300 rounded-md text-sm py-2 pl-9 px-3 focus:ring-blue-500 focus:border-blue-500" placeholder="YYYY-MM-DD HH:MM" type="text"/>
                </div>
              </div>
              <div>
                <label class="block text-xs font-medium text-slate-600 mb-1.5">Posture</label>
                <select class="w-full border-gray-300 rounded-md text-sm py-2 px-3 bg-slate-50">
                  <option>Sitting</option>
                  <option>Supine</option>
                  <option>Standing</option>
                </select>
              </div>
            </div>
            <div class="mb-4">
              <label class="block text-xs font-medium text-slate-600 mb-1.5">Electrode Position</label>
              <select class="w-full border-gray-300 rounded-md text-sm py-2 px-3 bg-slate-50">
                <option>Lead I</option>
                <option>Lead II</option>
                <option>Lead III</option>
              </select>
            </div>
            <div>
              <label class="block text-xs font-medium text-slate-600 mb-1.5">Noise Check</label>
              <label class="inline-flex items-center">
                <input class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" type="checkbox"/>
                <span class="ml-2 text-sm text-slate-600">Low Noise Environment</span>
              </label>
            </div>
          </div>
          <div>
            <h3 class="text-sm font-bold text-slate-900 mb-3">Age/Gender</h3>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-xs font-medium text-slate-600 mb-1.5">Age</label>
                <input class="w-full border-gray-300 rounded-md text-sm py-2 px-3 focus:ring-blue-500 focus:border-blue-500" placeholder="Age" type="number"/>
              </div>
              <div>
                <label class="block text-xs font-medium text-slate-600 mb-1.5">Gender</label>
                <select class="w-full border-gray-300 rounded-md text-sm py-2 px-3">
                  <option>Male</option>
                  <option>Female</option>
                  <option>Other</option>
                </select>
              </div>
            </div>
          </div>
        </form>
      </section>

      <!-- Card 2: Data Upload -->
      <section class="bg-white rounded-xl shadow-sm p-6 border border-slate-200 h-[600px] flex flex-col">
        <h2 class="text-lg font-bold text-slate-900 mb-5">2. Data Upload (WAV)</h2>
        <div class="upload-area bg-slate-50 rounded-lg flex flex-col items-center justify-center p-10 mb-6 cursor-pointer hover:bg-slate-100 transition-colors flex-grow min-h-[220px]"
             onclick="document.getElementById('file-input').click()">
          <div class="mb-4">
            <svg class="w-16 h-16 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"></path></svg>
          </div>
          <p class="text-sm font-semibold text-slate-700 mb-2">Drag and drop your ECG file here</p>
          <p class="text-xs text-slate-500 text-center">Supported formats: WAV. (Single lead only)</p>
          <input type="file" id="file-input" class="hidden" data-action="change->upload#handleFile" data-upload-target="input" accept="audio/wav,audio/x-wav,.wav">
        </div>
        
        <div id="file-info" class="hidden bg-green-50 border border-green-100 rounded-lg p-3 flex items-center justify-between mb-2">
          <div class="flex items-center space-x-3 overflow-hidden">
            <svg class="w-6 h-6 text-slate-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path></svg>
            <div class="min-w-0">
              <p class="text-sm font-medium text-slate-900 truncate" data-upload-target="fileName"></p>
              <p class="text-xs text-green-600 font-medium truncate">Validated (WAV format detected)</p>
            </div>
          </div>
          <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
        </div>
        <p class="text-xs text-slate-500 mt-2">Note: Automatic validation for single lead format.</p>
      </section>

      <!-- Card 3: Preview & Analysis -->
      <section class="bg-white rounded-xl shadow-sm p-6 border border-slate-200 h-[600px] flex flex-col">
        <h2 class="text-lg font-bold text-slate-900 mb-1">3. Preview & Analysis</h2>
        <h3 class="text-sm font-semibold text-slate-900 mb-3">Waveform Preview</h3>
        <div class="border border-slate-200 rounded-lg p-2 mb-6 relative bg-slate-50 h-40 flex items-center justify-center">
          <p class="text-xs text-slate-400 italic" id="preview-placeholder">Please upload a file to preview</p>
          <canvas id="preview-chart" class="hidden w-full h-full"></canvas>
        </div>
        <div class="mb-6">
          <label class="block text-sm font-medium text-slate-900 mb-1.5">Sampling Rate (Hz)</label>
          <input class="w-full border-gray-300 rounded-md text-sm py-2 px-3 text-slate-900" type="text" value="500"/>
          <p class="text-xs text-slate-500 mt-1">Auto-estimated from file. Adjust if necessary.</p>
        </div>
        <div class="mt-auto space-y-3">
          <button class="w-full bg-[#2563EB] hover:bg-blue-700 text-white font-medium py-3 rounded-lg flex items-center justify-center space-x-2 transition-all shadow-sm active:scale-95"
                  data-action="click->upload#analyze" data-upload-target="button">
            <span>Execute Analysis</span>
          </button>
        </div>
      </section>
    </div>
  </main>

  <!-- Loading State Overlay -->
  <div id="loading" class="hidden fixed inset-0 bg-white/80 backdrop-blur-sm z-[100] flex flex-col items-center justify-center" data-upload-target="loading">
    <div class="relative w-24 h-24 mb-6">
      <div class="absolute inset-0 border-8 border-slate-100 rounded-full"></div>
      <div class="absolute inset-0 border-8 border-[#2563EB] border-t-transparent rounded-full animate-spin"></div>
    </div>
    <p class="text-xl font-bold text-slate-800 animate-pulse">Analysing ECG Data...</p>
    <p class="text-sm text-slate-500 mt-2 italic">Detecting R-Peaks and Rhythm patterns</p>
  </div>
</div>
